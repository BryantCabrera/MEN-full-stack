<%- include('../partials/header', { 
    title: 'Beer Index Page'
}) %>

    <main>
        <h1>Beer Index Page</h1>

        <ul>
            <% beers.forEach( beer => { %>
                <li><a href="/beers/<%= beer._id %>"><%= beer.name %></a>, a <%= beer.style %>, served at <%= beer.bars %>.  People say it's <%= beer.comments %>.</li>
            <% }); %>
        </ul>
    </main>

<%- include('../partials/footer') %>